@model IReadOnlyList<ProductType>
@{
    ViewData["Title"] = "Index";
}

<h1>All Product Types</h1>
<hr />
<br />

<a asp-action="Create" class="btn btn-outline-primary">Add New Product Type</a>

@if (Model.Count > 0)
{
    <table class="mt-3 table table-bordered table-striped table-hover dt-responsive nowrap">
        <thead class="bg-dark text-white text-center">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var type in Model)
            {
                <tr class="text-center align-middle">
                    <td>@type.Id</td>
                    <td>@type.Name</td>

                    <partial name="_ButtonsPartialView" model="@type.Id.ToString()" />
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There's No Types'</h2>
    </div>
}


