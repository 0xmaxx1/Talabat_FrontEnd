@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "All Roles";
}

<h1>All Roles</h1>
<hr />
<br />

<a asp-action="Create" class="btn btn-primary">Add New Role</a>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                @* <th>@Html.DisplayNameFor(R => R.Id)</th> *@
                <th>@Html.DisplayNameFor(R => R.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    @* <td>@role.Id</td> *@

                    <td>@role.Name</td>

                    <partial name="_ButtonsPartialView" model="@role.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There are No Roles !!</h2>
    </div>
}