@model ProductViewModel


<div class="form-group">
    <label asp-for="Id" class="col-form-label"></label>
    <input asp-for="Id" class="form-control" readonly />
</div>
<br />

<div class="form-group">
    <label asp-for="Name" class="col-form-label"></label>
    <input asp-for="Name" class="form-control" disabled />
</div>
<br />


<div class="form-group">
    <label asp-for="Description" class="col-form-label"></label>
    <input asp-for="Description" class="form-control" disabled/>
</div>
<br />

<div class="form-group">
    <label asp-for="Price" class="col-form-label"></label>
    <input asp-for="Price" class="form-control" type="number" disabled/>
</div>
<br />


<div class="form-group">
    <label asp-for="Image" class="col-form-label"></label><br />
    <img src="~/@Model.PictureURL" width="30%" />
</div>
<br />


<div class="form-group">
    <label asp-for="ProductBrand.Name" class="col-form-label">Product Brand</label>
    <input asp-for="ProductBrand.Name" class="form-control" disabled />
</div>
<br />

<div class="form-group">
    <label asp-for="ProductType.Name" class="col-form-label">Product Type</label>
    <input asp-for="ProductType.Name" class="form-control" disabled />
</div>
<br />