@model IReadOnlyList<ProductViewModel>
@{
    ViewData["Title"] = "Index";
}


<h1>All Products</h1>
<hr />
<br />

<a asp-action="Create" class="btn btn-outline-primary">Add New Product</a>

@if (Model.Count > 0)
{
    <table class="mt-3 table table-bordered table-striped table-hover dt-responsive nowrap">
        <thead class="bg-dark text-white text-center">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Picture</th>
                <th>Brand</th>
                <th>Type</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                    <td>
                        <img class="w-75" src="~/@product.PictureURL" alt="@product.Name Image" />
                    </td>
                    <td>@product.ProductBrand.Name</td>
                    <td>@product.ProductType.Name</td>

                    <partial name="_ButtonsPartialView" model="@product.Id.ToString()" />
                </tr>
            }
        </tbody>

    </table>
}
else
{
    <div class="mt-3 p-3 alert-warning">
        <h2>There's No Products'</h2>
    </div>
}